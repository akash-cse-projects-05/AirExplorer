    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/public/js/script.js"></script>

    <script>
    document.addEventListener('DOMContentLoaded', function () {
        const filterButtons = document.querySelectorAll('.filter');
        const listingItems = document.querySelectorAll('.listing-item');

        filterButtons.forEach(function (filter) {
            filter.addEventListener('click', function () {
                const filterCategory = this.getAttribute('data-filter');

                listingItems.forEach(function (listing) {
                    const category = listing.getAttribute('data-category');

                    if (filterCategory === 'all' || category === filterCategory) {
                        listing.style.display = 'block';
                    } else {
                        listing.style.display = 'none';
                    }
                });

                // Optionally, add active class to the clicked filter and remove from others
                filterButtons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');
            });
        });

        // Initially show all listings (you can remove this if you want a default filter)
        // const allFilter = document.querySelector('.filter[data-filter="all"]');
        // if (allFilter) {
        //     allFilter.click();
        // }
    });
</script>

